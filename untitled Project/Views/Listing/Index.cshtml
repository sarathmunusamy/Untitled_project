<div id="listing" class=" row">

    <ul class="cbp-rfgrid" style="list-style-type:none">




        @foreach( var item in Model.productDetail )
        {

            IEnumerable<productImage> list = Model.productImage;


            var imageModel = list.Where( x => x.pID == item.ID ).SingleOrDefault();


            <a href="@Url.Action( "ProductDetail", "Listing", new { ID = item.ID } )">
                <li id=@item.ID>

                    @if( imageModel != null )
                    {
                        var base64 = Convert.ToBase64String( imageModel.mainImg );
                        var imgSrc = String.Format( "data:image/gif;base64,{0}", base64 );
                        <div id="mainImage"> <img src='@imgSrc' style="max-width:100px; max-height:100px;" /></div>
                    }
                    <b>Name: </b> @Html.DisplayFor( modelItem => item.name )
                    <span><b>Price: </b><h style="text-decoration-line:line-through">@Html.DisplayFor( modelItem => item.marketPrice )</h> &nbsp;@Html.DisplayFor( modelItem => item.price )  </span>

                    <b>Size: </b>@Html.DisplayFor( modelItem => item.size )
                </li>
            </a>

        }


    </ul>

</div>